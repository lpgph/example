<?xml version="1.0" encoding="UTF-8"?>

<!--
    status : 这个用于设置log4j2自身内部的信息输出,可以不设置,当设置成trace时,会看到log4j2内部各种详细输出
    monitorInterval : Log4j能够自动检测修改配置文件和重新配置本身, 设置间隔秒数。
-->
<Configuration status="WARN" monitorInterval="600">

<!--    <Properties>-->
<!--        &lt;!&ndash; 配置日志文件输出目录 &ndash;&gt;-->
<!--        <Property name="LOG_HOME">/usr/local/dshui/logs/erp</Property>-->
<!--    </Properties>-->

    <Properties>
        <Property name="PROJECT_NAME">consumer</Property>
        <Property name="ELK_LOG_PATTERN">${sys:PID} %c{3.}.%t %m%n</Property>
    </Properties>

    <Appenders>
        <!--这个输出控制台的配置-->
        <Console name="Console" target="SYSTEM_OUT">
            <!-- 控制台只输出level及以上级别的信息(onMatch),其他的直接拒绝(onMismatch) -->
            <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
            <!-- 输出日志的格式 -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n"/>
        </Console>

        <!--&lt;!&ndash; 设置日志格式并配置日志压缩格式(service.log.年份.gz) &ndash;&gt;-->
        <!--<RollingRandomAccessFile name="json_file"-->
        <!--immediateFlush="false" fileName="${LOG_HOME}/service.json"-->
        <!--filePattern="${LOG_HOME}/service.log.%d{yyyy-MM-dd}.log.gz">-->
        <!--<JsonLayout/> &lt;!&ndash;使用json格式输出&ndash;&gt;-->
        <!--&lt;!&ndash;-->
        <!--%d{yyyy-MM-dd HH:mm:ss, SSS} : 日志生产时间-->
        <!--%p : 日志输出格式-->
        <!--%c : logger的名称-->
        <!--%m : 日志内容，即 logger.info("message")-->
        <!--%n : 换行符-->
        <!--%C : Java类名-->
        <!--%L : 日志输出所在行数-->
        <!--%M : 日志输出所在方法名-->
        <!--hostName : 本地机器名-->
        <!--hostAddress : 本地ip地址-->
        <!--&ndash;&gt;-->
        <!--<PatternLayout>-->
        <!--<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M &#45;&#45; %msg%xEx%n</pattern>-->
        <!--</PatternLayout>-->
        <!--<Policies>-->
        <!--<TimeBasedTriggeringPolicy interval="1" modulate="true"/>-->
        <!--</Policies>-->
        <!--</RollingRandomAccessFile>-->
    </Appenders>

    <Loggers>
        <!-- 配置日志的根节点 -->
        <root level="debug">
            <appender-ref ref="Console"/>
            <!--<appender-ref ref="json_file"/>-->
        </root>

        <!-- 第三方日志系统 -->
        <logger name="org.springframework" level="ERROR"/>
        <logger name="org.mybatis" level="ERROR"/>
        <logger name="com.mongodb" level="ERROR"/>
        <logger name="springfox.documentation" level="ERROR"/>
        <logger name="org.apache" level="ERROR"/>
        <logger name="com.alibaba.druid" level="ERROR"/>
        <logger name="org.quartz" level="ERROR"/>
        <logger name="com.netflix" level="ERROR"/>
        <logger name="org.hibernate" level="ERROR"/>
        <logger name="io.netty" level="ERROR"/>
        <logger name="com.dshui.*" level="ERROR"/>
        <logger name="com.iit.*" level="ERROR"/>
        <logger name="cc.dshui.*" level="ERROR"/>
    </Loggers>

</Configuration>